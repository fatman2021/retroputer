{
  "name": "retroputer",
  "version": "2.0.0",
  "description": "retroputer",
  "esm": {
    "cjs": true,
    "mode": "all",
    "sourceMap": true
  },
  "main": "index.js",
  "browser": "index.js",
  "dependencies": {
    "cli": "^1.0.1",
    "cliffy": "^2.0.5",
    "htm": "^2.2.1",
    "pegjs": "^0.11.0-master.0b102d2",
    "sade": "^1.6.0",
    "shelljs": "^0.8.3",
    "yurnalist": "^1.0.5"
  },
  "devDependencies": {
    "ava": "^1.4.1",
    "benchmark": "^2.1.4",
    "c8": "^5.0.2",
    "chai": "^4.2.0",
    "coveralls": "^3.0.3",
    "cross-env": "^5.2.0",
    "eslint-plugin-ava": "^6.0.0",
    "esm": "^3.2.25",
    "http-server": "^0.11.1",
    "microtime": "^3.0.0",
    "mocha": "^6.1.4"
  },
  "scripts": {
    "test": "ava",
    "watch:test": "ava --watch",
    "cover": "c8 --reporter html ava",
    "coveralls": "c8 ava; c8 report --reporter html --reporter=text-lcov | coveralls",
    "cover:view": "open ./coverage/index.html",
    "lint": "eslint src/**/*.js test/**/*.js bin/**/*.js --ignore-pattern bundle.js",
    "basm": "node src/basm/index.js",
    "monitor": "node src/monitor/index.js",
    "build:basm": "pegjs --format es -o src/basm/basm.peg.js src/basm/basm.pegjs",
    "build:kernel": "src/basm/index.js -d asm/kernel < asm/kernel/kernel.asm > src/roms/kernel.js",
    "inspect:monitor": "node --inspect src/monitor/index.js",
    "perf:test": "node --prof ./node_modules/.bin/ava && mv isolate*.log .perf",
    "perf:monitor": "node --prof src/monitor/index.js && mv isolate*.log .perf",
    "perf": "node --prof-process --preprocess -j .perf/i*.log | flamebearer && rm flamegraph.html",
    "server": "http-server -a 127.0.0.1 -c-1 ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kerrishotts/retroputer.git"
  },
  "author": "Kerri Shotts <kerrishotts@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kerrishotts/retroputer/issues"
  },
  "homepage": "https://github.com/kerrishotts/retroputer#readme",
  "ava": {
    "require": [
      "esm"
    ],
    "verbose": false,
    "files": [
      "test/**/*.js",
      "!test/tmp/**/*"
    ]
  }
}
